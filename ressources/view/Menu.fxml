<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.Pane?>


<Pane fx:controller="ensi.fr.mancala.client.controller.MenuController" maxHeight="-Infinity" maxWidth="-Infinity"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" >

      <MenuBar prefHeight="32.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="Mancala">
            <items>
                <MenuItem  onAction="#newMatch" mnemonicParsing="false" text="New Match" />
                <MenuItem onAction="#saveGame" mnemonicParsing="false" text="Save game" />
                <MenuItem onAction="#loadGame" mnemonicParsing="false" text="Load game" />
                <MenuItem onAction="#undo" mnemonicParsing="false" text="Undo" />
                <MenuItem onAction="#forfeit" mnemonicParsing="false" text="Forfeit" />
                <MenuItem onAction="#exit" mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Rules">
                <items>
                    <MenuItem onAction="#showRules" mnemonicParsing="false" text="See rules" />
                </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Options">
            <items>
                <MenuItem onAction="#changeSeedDisplay" mnemonicParsing="false" text="Hide seeds numbers"/>
                <MenuItem onAction="#changeOnMouseEnteredOption" mnemonicParsing="false"
                          text="Don't show seeds numbers on mouse entered"/>
                <MenuItem onAction="#playSound" mnemonicParsing="false" text="Stop sounds" />
            </items>
          </Menu>
        <Menu mnemonicParsing="false" text="System" >
            <items>
                <MenuItem onAction="#about" mnemonicParsing="false" text="About" />
            </items>
        </Menu>
        </menus>
      </MenuBar>
</Pane>
