<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.Pane?>


<Pane fx:controller="ensi.fr.mancala.client.controller.MenuController" maxHeight="-Infinity" maxWidth="-Infinity"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" >

      <MenuBar prefHeight="32.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem onAction="#saveGame" mnemonicParsing="false" text="Save game" />
                <MenuItem onAction="#loadGame" mnemonicParsing="false" text="Load game" />
                <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Options">
            <items>
                <MenuItem mnemonicParsing="false" text="Undo" />
                <MenuItem onAction="#forfeit" mnemonicParsing="false" text="Forfeit" />
            </items>
          </Menu>
        <Menu mnemonicParsing="false" text="About" >
            <items>
                <MenuItem onAction="#about" mnemonicParsing="false" text="About" />
            </items>
        </Menu>
        </menus>
      </MenuBar>
</Pane>
